# KGV Frontend Environment Variables
# Copy this file to .env.local for development or .env for production

# ======================
# Application Settings
# ======================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_VERSION=1.0.0

# ======================
# API Configuration
# ======================
NEXT_PUBLIC_API_URL=http://localhost:5000/api
API_TIMEOUT=30000

# ======================
# Authentication
# ======================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ISSUER=KGV
JWT_AUDIENCE=KGV-Frontend
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# ======================
# Database Configuration
# ======================
DB_CONNECTION_STRING=Host=localhost;Port=5432;Database=kgv;Username=kgv_user;Password=kgv_password
POSTGRES_DB=kgv
POSTGRES_USER=kgv_user
POSTGRES_PASSWORD=kgv_password
DB_PORT=5432

# ======================
# Redis Configuration (Optional)
# ======================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# Container Ports
# ======================
FRONTEND_PORT=3000
FRONTEND_DEV_PORT=3001
API_PORT=5000

# ======================
# Security Settings
# ======================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://kgv.local
ALLOWED_HOSTS=localhost,kgv.local,127.0.0.1

# ======================
# SSL/TLS Configuration
# ======================
ACME_EMAIL=admin@kgv.local
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# ======================
# Monitoring & Logging
# ======================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin
LOG_LEVEL=info
ENABLE_METRICS=true

# ======================
# Feature Flags
# ======================
ENABLE_DARK_MODE=true
ENABLE_EXPORT=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_BULK_OPERATIONS=true

# ======================
# File Upload Settings
# ======================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_PATH=/uploads

# ======================
# Email Configuration (Optional)
# ======================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=noreply@kgv.local
SMTP_PASSWORD=
SMTP_FROM=KGV System <noreply@kgv.local>
SMTP_SECURE=true

# ======================
# Backup Configuration
# ======================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ======================
# Performance Settings
# ======================
CACHE_TTL=300
SESSION_TIMEOUT=3600
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15

# ======================
# Development Settings
# ======================
NODE_ENV=development
DEBUG=false
HOT_RELOAD=true
SOURCE_MAPS=true

# ======================
# Production Settings
# ======================
# NODE_ENV=production
# DEBUG=false
# HOT_RELOAD=false
# SOURCE_MAPS=false
# MINIFY=true
# COMPRESS=true

# ======================
# Kubernetes Settings
# ======================
K8S_NAMESPACE=kgv
K8S_SERVICE_ACCOUNT=kgv-frontend
K8S_INGRESS_CLASS=nginx
K8S_TLS_SECRET=kgv-tls

# ======================
# Health Check Settings
# ======================
HEALTH_CHECK_TIMEOUT=10000
READINESS_CHECK_TIMEOUT=5000
LIVENESS_PROBE_PATH=/api/health
READINESS_PROBE_PATH=/api/ready

# ======================
# Localization
# ======================
DEFAULT_LOCALE=de
SUPPORTED_LOCALES=de
TIMEZONE=Europe/Berlin
DATE_FORMAT=dd.MM.yyyy
TIME_FORMAT=HH:mm
CURRENCY=EUR