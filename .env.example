# KGV Migration System - Environment Variables
# ============================================
# SECURITY: Never commit the actual .env file to version control
# Copy this file to .env and fill in your secure values

# Environment Configuration
ENVIRONMENT=production
APP_VERSION=1.0.0

# Database Configuration (PostgreSQL)
# Generate strong passwords using: openssl rand -base64 32
DB_NAME=kgv_production
DB_USER=kgv_admin
DB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE
DB_ENCRYPT_KEY=CHANGE_ME_USE_32_BYTE_KEY_HERE

# Migration Database User (Limited Privileges)
MIGRATION_DB_USER=kgv_migration
MIGRATION_DB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE

# Redis Configuration
# Generate strong password using: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE

# JWT Configuration
# Generate secret using: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_64_BYTE_SECRET_HERE
JWT_ISSUER=kgv-api
JWT_AUDIENCE=kgv-web
JWT_EXPIRATION=60
JWT_REFRESH_EXPIRATION=7

# NextAuth Configuration
# Generate secret using: openssl rand -base64 32
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=CHANGE_ME_USE_STRONG_SECRET_HERE

# SSL Certificate Passwords
API_CERT_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Nginx Configuration
NGINX_HOST=your-domain.com
NGINX_PORT=443

# Grafana Configuration
# Use strong passwords with special characters
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE
GRAFANA_SECRET_KEY=CHANGE_ME_USE_STRONG_SECRET_HERE

# Encryption Key for Data at Rest
# Generate using: openssl rand -base64 32 | tr -d '\n' | base64
ENCRYPTION_KEY=CHANGE_ME_USE_BASE64_ENCODED_32_BYTE_KEY

# File System Paths
DATA_PATH=/secure/data
BACKUP_PATH=/secure/backups
LOG_PATH=/secure/logs

# Migration Settings
MIGRATION_BATCH_SIZE=1000
MIGRATION_MAX_WORKERS=2
MAX_STRING_LENGTH=1000
MAX_BATCH_SIZE=5000

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_CONNECTIONS=10

# Audit Logging
AUDIT_LOG_PATH=/secure/logs/audit.log

# Security Settings
ENABLE_INPUT_VALIDATION=true
VALIDATION_STRICT_MODE=true

# Performance Settings
DB_POOL_SIZE=5
DB_POOL_MAX=10

# Monitoring Settings (Optional)
ENABLE_METRICS=false
METRICS_PORT=8000