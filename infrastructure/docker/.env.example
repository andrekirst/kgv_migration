# KGV Migration - Development Environment Variables
# Copy this file to .env and configure with your values
# NEVER commit .env file to version control

# Database Configuration
POSTGRES_DB=kgv_development
POSTGRES_USER=kgv_admin
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE
# Separate app user password
POSTGRES_APP_PASSWORD=CHANGE_ME_USE_DIFFERENT_STRONG_PASSWORD

# Redis Configuration
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_REDIS_PASSWORD

# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_VERY_LONG_SECRET_KEY_HERE
JWT_ISSUER=kgv-api-dev
JWT_AUDIENCE=kgv-web-dev
JWT_EXPIRY_HOURS=24

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_USE_STRONG_NEXTAUTH_SECRET
NEXTAUTH_URL=http://localhost

# Admin Passwords for Development Tools
PGADMIN_DEFAULT_EMAIL=admin@kgv.local
# Generate with: openssl rand -base64 24
PGADMIN_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD

# Seq Logging
# Generate with: openssl rand -base64 24
SEQ_ADMIN_PASSWORD=CHANGE_ME_SEQ_PASSWORD

# Grafana Monitoring
GRAFANA_ADMIN_USER=admin
# Generate with: openssl rand -base64 24
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=15
API_MAX_REQUEST_SIZE=16M

# Encryption Keys (for data at rest)
# Generate with: openssl rand -hex 32
DATA_ENCRYPTION_KEY=CHANGE_ME_USE_HEX_KEY_HERE

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Security Settings
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
LOG_SANITIZATION=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_SLIDING_EXPIRATION=true
MAX_CONCURRENT_SESSIONS=5

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HISTORY_COUNT=5
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# Development Flags
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false