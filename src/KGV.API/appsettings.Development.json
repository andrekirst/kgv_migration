{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=kgv_db_dev;Username=kgv_user;Password=kgv_dev_password;Include Error Detail=true;",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "development-jwt-key-that-should-not-be-used-in-production-environment",
    "ExpiryInMinutes": 480
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Debug",
        "System": "Information",
        "KGV": "Debug"
      }
    }
  },
  "Features": {
    "EnableSwagger": true,
    "EnableMetrics": true,
    "EnableDetailedErrors": true,
    "EnableRateLimiting": false,
    "EnableGdprCompliance": true
  },
  "Security": {
    "RequireHttps": false,
    "EnableApiKeyAuthentication": false,
    "AllowAnonymousHealthChecks": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:5173",
      "https://localhost:3000",
      "https://localhost:4200",
      "https://localhost:5173"
    ]
  },
  "RateLimiting": {
    "DefaultPolicy": {
      "PermitLimit": 1000,
      "WindowInMinutes": 1
    },
    "StrictPolicy": {
      "PermitLimit": 100,
      "WindowInMinutes": 1
    }
  }
}