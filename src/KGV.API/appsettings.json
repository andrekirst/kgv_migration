{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=kgv_db;Username=kgv_user;Password=kgv_password;Include Error Detail=true;",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-chars-long",
    "Issuer": "KGV.API",
    "Audience": "KGV.Client",
    "ExpiryInMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning",
        "KGV": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/kgv-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "KGV.API"
    }
  },
  "RateLimiting": {
    "DefaultPolicy": {
      "PermitLimit": 100,
      "WindowInMinutes": 1
    },
    "StrictPolicy": {
      "PermitLimit": 10,
      "WindowInMinutes": 1
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://localhost:3000",
      "https://localhost:4200"
    ]
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckDatabaseConnectionString": "Host=localhost;Port=5432;Database=kgv_healthchecks;Username=kgv_user;Password=kgv_password;"
    }
  },
  "Features": {
    "EnableSwagger": true,
    "EnableMetrics": true,
    "EnableDetailedErrors": false,
    "EnableRateLimiting": true,
    "EnableGdprCompliance": true
  },
  "Localization": {
    "DefaultCulture": "de-DE",
    "SupportedCultures": [ "de-DE", "en-US" ]
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30
  },
  "Security": {
    "RequireHttps": true,
    "EnableApiKeyAuthentication": false,
    "AllowAnonymousHealthChecks": true
  },
  "Monitoring": {
    "MetricsEnabled": true,
    "TracingEnabled": true,
    "PerformanceCountersEnabled": true
  }
}